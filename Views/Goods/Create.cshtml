@model DisasterAlleviation.Models.DonGoodsModel;
<style>
    a:hover {
        color: orange;
    }

    #c {
        accent-color: orange;
    }

    a {
        color: white;
    }
</style>
<h4>Make a Donation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProccess">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Noitems" class="control-label"></label>
                <input asp-for="Noitems" class="form-control" />
                <span asp-validation-for="Noitems" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                
                <label asp-for="Category" class="control-label"></label>
                @Html.DropDownList("Category",new SelectList(ViewBag.data,"ID","Category"))
                @Html.ActionLink("Add", "Create","Category")
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input asp-for="Anonymous" id="c" type="checkbox" value="true" />
                <label asp-for="Anonymous" class="control-label"></label>
                <span asp-validation-for="Anonymous" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" style="background-color:orange" value="Donate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}