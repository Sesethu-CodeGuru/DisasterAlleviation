@model IEnumerable<DisasterAlleviation.Models.PurchasedInventoryModel>

<style>
    body {
        background-color: purple;
        font-family: Arial, sans-serif;
    }

    .card {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 10px;
    }

    a:hover {
        color: orange;
    }

    a {
        color: black;
        text-decoration: none;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: orange;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>

<div class="card" style="text-align: center;">
    <h4>Purchased Goods</h4>
</div>

@if (Model.Count() > 0)
{
    <div class="card">
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    No Items
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Noitems)
                    </td>
                    <td>
                        <a asp-action="Donate" asp-route-id="@item.id">Donate</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
}
else
{
    <H3>@Html.ActionLink("Purchase Goods First", "Index","Purchase") </H3>
}
