@using DisasterAlleviation.Users;

<ul class="navbar-nav">
    @if (UserFunctions.Logged())
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" style="color:white">Hello @UserFunctions.LoginUser()!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Logout" asp-action="Index" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" style="color:white">
                <button type="submit" class="nav-link btn btn-link text-dark"> Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="Index" style="color:white">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index" style="color:white">Login</a>
        </li>
    }
</ul>
