@model DisasterAlleviation.Models.WalletModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        a:hover {
            color: orange;
        }

        a {
            color: white;
        }
    </style>
</head>
<body>
    
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h4 style ="color: white;">Wallet Balance</h4>
            <hr />
            <form asp-action="Fund">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <br />
                <div class="form-group">
                    <label asp-for="Amount" class="control-label" style="color: white;">Amount</label>
                    <input asp-for="Amount" class="form-control" type="number" min="1" required />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Fund Now" class="btn btn-primary" style="background-color: orange; color: white;" />
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
